[Unit]
Description=Application Manager Service
After=network.target

[Service]
Type=simple
User=root
Restart=on-failure
RestartSec=20s
#WatchdogSec=30s
ExecStart=/usr/bin/ApplicationManagerService
TimeoutSec=10s
#StartLimitInterval=480s
#StartLimitBurst=3
#StartLimitAction=reboot-force

StandardOutput=file:/var/log/app-service.log
StandardOutput=file:/var/log/app-service.log

[Install]
WantedBy=multi-user.target